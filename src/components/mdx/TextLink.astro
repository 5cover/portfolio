---
interface Props {
  href: string;
  external?: boolean;
  class?: string;
}

const { href, external, class: className } = Astro.props;

if (!href) {
  throw new Error('TextLink requires an href');
}

const isExternal = (external ?? href.startsWith('http://')) || href.startsWith('https://');
const classes = ['link', className].filter(Boolean).join(' ');
---
<a href={href} class={classes} {...(isExternal ? { target: '_blank', rel: 'noopener noreferrer' } : {})}>
  <slot />
</a>
