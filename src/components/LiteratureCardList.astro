---
import LiteratureCard from './LiteratureCard.astro';
import type { AnchorEntry, LocalizedLiteratureEntry } from '../lib/content';

type Props = {
  lang: string;
  route: string;
  langLabels: {
    fmtTitle: string;
  };
  entries: LocalizedLiteratureEntry[];
  anchorsById: Record<string, AnchorEntry['data']>;
  headingLevel?: number;
};

const props: Props = Astro.props;
const { lang, route, langLabels, entries, anchorsById, headingLevel = 3 } = props;
---
<ul class="lvl list-detail-split-card">
  {entries.map((entry) => (
    <LiteratureCard
      lang={lang}
      route={route}
      langLabels={langLabels}
      entry={entry}
      anchorsById={anchorsById}
      headingLevel={headingLevel}
    />
  ))}
</ul>
