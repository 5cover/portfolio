---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TextualContent from '../TextualContent.astro';

import type { LocalizedHistoryEntry } from '../../lib/content';

import '../../styles/history-detail.scss';
// one off exception for the heavily styled BUT informatique page: https://github.com/withastro/astro/issues/7761
// (it shows as resolved but sitll doesn't work for me)
import '../../styles/but-informatique.scss';
import type { AstroComponentFactory } from 'astro/runtime/server/render/astro/index.js';

type Copy = {
    story: string;
    detailsHeading: string;
};

type Props = {
    entry: LocalizedHistoryEntry;
    HistorySummary: AstroComponentFactory;
    HistoryBody: AstroComponentFactory;
    copy: Copy;
};

const props: Props = Astro.props;
const {
    entry,
    HistorySummary,
    HistoryBody,
    copy,
} = props;

const media = entry.data.media;
const meta = entry.data.meta;
const year = media?.year ? String(media.year) : '';
---

<BaseLayout
    pageName={`history/${entry.id}`}
>
    <main>
        <header>
            <h1 set:html={entry.data.title} />
            {(meta || year) ? (
                <p class="history-meta">
                    {meta ? <span set:html={meta} /> : null}
                    {year ? <span class="history-meta_year">{year}</span> : null}
                </p>
            ) : null}
            {media ? (
                <img
                    class="history-media"
                    src={media.img}
                    alt={media.alt}
                    loading="lazy"
                />
            ) : null}
        </header>
        <section id="story">
            <h2>{copy.story}</h2>
            <TextualContent content={HistorySummary} />
        </section>
        <section id="history-body">
            <h2>{copy.detailsHeading}</h2>
            <TextualContent content={HistoryBody} className="history-body textual" />
        </section>
    </main>
</BaseLayout>
