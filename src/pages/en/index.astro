    pianoTiles={pianoTiles}
    projects={projects}
    contacts={contacts}
    copy={{
        indexMe: 'About me',
        indexMyPhoto: 'My photo',
        indexOngoingProjects: 'My ongoing projects',
        indexAllMyProjects: 'All my projects',
        indexContact: 'Contact',
        indexMyResumePreview: 'Preview my resume',
        indexMyResume: 'My resume',
        indexVideoCv: 'Video CV',
        ongoing: labels.labels.ongoing,
        fmtTitle: labels.labels.fmtTitle,
    }}
>
