{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "detail",
    "type": "object",
    "required": [
        "abstract",
        "gallery",
        "links",
        "references",
        "story",
        "title"
    ],
    "properties": {
        "abstract": {
            "$ref": "html.json"
        },
        "background": {
            "type": "string",
            "format": "uri-reference",
            "title": "Background URI"
        },
        "gallery": {
            "type": "array",
            "items": {
                "required": [
                    "caption"
                ],
                "properties": {
                    "caption": {
                        "$ref": "html.json"
                    }
                },
                "oneOf": [
                    {
                        "properties": {
                            "url": {
                                "minLength": 1,
                                "type": "string"
                            }
                        },
                        "required": [
                            "url"
                        ]
                    },
                    {
                        "properties": {
                            "content": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "content"
                        ]
                    },
                    {
                        "properties": {
                            "iframe-src": {
                                "minLength": 1,
                                "type": "string"
                            }
                        },
                        "required": [
                            "iframe-src"
                        ]
                    }
                ]
            }
        },
        "links": {
            "type": "object",
            "additionalProperties": {
                "$ref": "anchor.json"
            }
        },
        "logo": {
            "$ref": "graphic.json"
        },
        "references": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "required": [
                            "caption"
                        ],
                        "properties": {
                            "caption": {
                                "$ref": "html.json"
                            }
                        }
                    },
                    {
                        "$ref": "anchor.json"
                    }
                ]
            }
        },
        "story": {
            "$ref": "html.json"
        },
        "title": {
            "$ref": "html.json"
        }
    }
}