{
    "uniqueItems": true,
    "type": "object",
    "title": "Projects",
    "$schema": "https://json-schema.org/draft-07/schema",
    "additionalProperties": {
        "type": "object",
        "required": [
            "abstract",
            "links",
            "references",
            "context",
            "gallery",
            "start-date",
            "story",
            "tags",
            "technologies",
            "title",
            "team"
        ],
        "properties": {
            "abstract": {
                "$ref": "html.json"
            },
            "team": {
                "uniqueItems": true,
                "type": "array",
                "additionalItems": {
                    "description": "definition id",
                    "type": "string"
                }
            },
            "links": {
                "uniqueItems": true,
                "minProperties": 1,
                "type": "object",
                "additionalProperties": {
                    "type": "object",
                    "required": [
                        "href"
                    ],
                    "properties": {
                        "href": {
                            "format": "uri-reference",
                            "type": "string"
                        },
                        "anchor": {
                            "minLength": 1,
                            "type": "string"
                        }
                    }
                }
            },
            "references": {
                "uniqueItems": true,
                "type": "object",
                "additionalProperties": {
                    "type": "object",
                    "required": [
                        "href"
                    ],
                    "properties": {
                        "href": {
                            "type": "string",
                            "format": "uri-reference"
                        },
                        "anchor": {
                            "description": "anchor id",
                            "minLength": 1,
                            "type": "string"
                        }
                    }
                }
            },
            "background": {
                "type": "string",
                "format": "uri-reference",
                "title": "Background URI"
            },
            "context": {
                "$ref": "html.json"
            },
            "end-date": {
                "type": "string",
                "format": "date"
            },
            "gallery": {
                "uniqueItems": true,
                "type": "object",
                "additionalProperties": {
                    "oneOf": [
                        {
                            "additionalProperties": false,
                            "type": "object",
                            "properties": {
                                "url": {
                                    "minLength": 1,
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "additionalProperties": false,
                            "type": "object",
                            "properties": {
                                "content": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "additionalProperties": false,
                            "properties": {
                                "iframe-src": {
                                    "minLength": 1,
                                    "type": "string"
                                }
                            }
                        }
                    ]
                }
            },
            "logo": {
                "type": "object",
                "required": [
                    "isThemedSvg",
                    "url"
                ],
                "properties": {
                    "isThemedSvg": {
                        "type": "boolean",
                        "description": "Whether to include this image as an SVG element that will be affected by the site's theming. Useful for black & white images that would contrast badly with the background. If this is true, the url must point to an SVG file."
                    },
                    "url": {
                        "minLength": 1,
                        "type": "string"
                    }
                }
            },
            "start-date": {
                "type": "string",
                "format": "date"
            },
            "story": {
                "$ref": "html.json"
            },
            "tags": {
                "uniqueItems": true,
                "type": "array",
                "description": "tag IDs",
                "items": {
                    "minItems": 1,
                    "type": "string"
                }
            },
            "technologies": {
                "uniqueItems": true,
                "type": "array",
                "description": "definition IDs of technologies used",
                "items": {
                    "minLength": 1,
                    "type": "string"
                }
            },
            "title": {
                "$ref": "html.json"
            }
        }
    }
}